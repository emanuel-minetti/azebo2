    "bootstrap": "^4.4.1",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vue": "^6.2.2",
    "mutationobserver-shim": "^0.3.5",
